<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvTransfer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"
    android:backgroundTint="@color/hijautransfer">

    <ImageView
        android:background="@drawable/baseline_keyboard_double_arrow_right_24"
        android:layout_gravity="center"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginRight="17dp"/>

    <ImageView
        android:background="@drawable/baseline_keyboard_double_arrow_right_24"
        android:layout_gravity="center"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:id="@+id/tvnamaPemainT"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/firasans"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/tvnamaTeamT"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/firasans"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="255dp"
        android:layout_width="100dp"
        android:layout_height="35dp"/>

    <TextView

        android:id="@+id/tvstatusPemainT"
        android:textStyle="italic"
        android:textSize="20dp"
        android:text="TRANSFER"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="25dp"/>

    <TextView

        android:id="@+id/tvstatusDoneT"
        android:layout_width="121dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:text="DONE DEAL!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/ivPemainT"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="28dp" />

    <ImageView
        android:id="@+id/ivClubT"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="268dp" />

</androidx.cardview.widget.CardView>