<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:id="@+id/homeFragment"
    android:background="@color/white"
    android:paddingBottom="90dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/logo_color_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_home"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/oswald"
        android:layout_marginTop="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <androidx.cardview.widget.CardView
        android:layout_width="65dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@id/text_home"
        app:layout_constraintStart_toEndOf="@id/text_home"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="50dp"
        >
    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/ivTransfer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_home"/>

    <TextView
        android:id="@+id/tvTransfer"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:fontFamily="@font/oswald"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/ivTransfer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivRumour"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransfer"/>

    <TextView
        android:id="@+id/tvRumour"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:fontFamily="@font/oswald"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/ivRumour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>