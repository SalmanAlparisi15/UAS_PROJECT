<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvRumour"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"
    android:backgroundTint="@color/hijautransfer">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginRight="17dp"
        android:background="@drawable/baseline_keyboard_double_arrow_right_24" />

    <ImageView
        android:background="@drawable/baseline_keyboard_double_arrow_right_24"
        android:layout_gravity="center"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:id="@+id/tvnamaPemain"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/firasans"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/tvnamaTeam"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/firasans"
        android:layout_marginTop="71dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="end"
        android:layout_width="100dp"
        android:layout_height="35dp"/>

    <TextView
        android:id="@+id/tvstatusPemain"
        android:textStyle="italic"
        android:textSize="20dp"
        android:text="RUMOUR"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/ivPemain"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="28dp" />

    <ImageView
        android:id="@+id/ivClub"
        android:layout_gravity="end"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="28dp" />

    <ImageButton
        android:id="@+id/ibDelete"
        android:backgroundTint="@color/hijautransfer"
        android:src="@drawable/baseline_delete_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"/>

</androidx.cardview.widget.CardView>